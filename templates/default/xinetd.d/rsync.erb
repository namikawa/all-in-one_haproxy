# default: off
# description: The rsync server is a good addition to an ftp server, as it \
#       allows crc checksumming etc.
service rsync
{
        disable         = <%= node['xinetd']['rsync']['disable'] %>
        flags           = IPv6
        socket_type     = stream
        wait            = no
        user            = root
        server          = /usr/bin/rsync
        server_args     = <%= node['xinetd']['rsync']['server_args'] %>
        log_on_failure  += USERID
}
